<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="001-create-applications-table" author="system">
        <createTable tableName="applications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="smoker" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="hobbies" type="CLOB"/>
            <column name="health_conditions" type="CLOB"/>
        </createTable>

        <createIndex tableName="applications" indexName="idx_applications_email">
            <column name="email"/>
        </createIndex>

        <createIndex tableName="applications" indexName="idx_applications_name">
            <column name="last_name"/>
            <column name="first_name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>